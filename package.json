{
	"name": "arb-jupiter-bot",
	"description": "Arb Jupiter Bot Turborepo",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/ARBProtocol/solana-jupiter-bot.git"
	},
	"scripts": {
		"build": "turbo run build",
		"build --force": "turbo run build --force",
		"start": "turbo run build && NODE_ENV=production pnpm -C ./apps/arb-jupiter-bot start",
		"trade": "turbo run build && cd apps/arb-jupiter-bot && yarn start",
		"dev": "cd apps/arb-jupiter-bot && yarn dev",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\""
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@manypkg/cli": "^0.19.2",
		"prettier": "2.8.1",
		"turbo": "latest"
	},
	"packageManager": "pnpm@7.27.1",
	"maintainers": [
		{
			"name": "Pawe≈Ç Mioduszewski",
			"email": "pmioduszewski@dobrebranie.pl"
		}
	]
}
