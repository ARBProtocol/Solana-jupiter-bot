{
	"name": "arb-solana-bot",
	"description": "Arb Solana Bot Turborepo",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/ARBProtocol/solana-jupiter-bot.git"
	},
	"scripts": {
		"build": "turbo run build",
		"build:core": "turbo run build --filter core",
		"build:tui": "turbo run build --filter tui",
		"build:wizard": "turbo run build --filter wizard",
		"build:jupiter": "turbo run build --filter jupiter-adapter",
		"build --force": "turbo run build --force",
		"start": "turbo run build && pnpm -C ./apps/arb-solana-bot start",
		"start:mini": "turbo run build && cross-env TUI_INITIAL_SCREEN=mini pnpm -C ./apps/arb-solana-bot start",
		"start:debug": "turbo run build && -C ./apps/arb-solana-bot start:debug",
		"wizard": "turbo run build && cross-env NODE_ENV=production pnpm -C ./apps/arb-solana-bot wizard",
		"trade": "turbo run build && cd apps/arb-solana-bot && yarn start",
		"dev": "cd apps/arb-solana-bot && pnpm dev",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"postinstall": "manypkg check",
		"clean": "git clean -xdf node_modules && pnpm recursive exec -- git clean -xdf node_modules dist",
		"clean:workspaces": "turbo clean",
		"publish-packages": "turbo run lint build && changeset version && changeset publish",
		"create-standalone": "./scripts/create-standalone-version.sh"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"packageManager": "pnpm@7.27.1",
	"maintainers": [
		{
			"name": "Pawe≈Ç Mioduszewski",
			"email": "pmioduszewski@dobrebranie.pl"
		}
	],
	"dependencies": {
		"@changesets/cli": "^2.26.0",
		"@manypkg/cli": "^0.20.0",
		"cross-env": "^7.0.3",
		"prettier": "^2.8.4",
		"turbo": "^1.10.1"
	}
}
